
@import "../template/noData/noData.wxss";
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
page{
  background-color: #FAF9F9;
}
.answer-banner{
 position: fixed;
 top: 0px;
 left: 0px;
 right: 0rpx;
 z-index: 2999;
}
.answer-table{
  width: 100%;
  padding: 19rpx 30rpx;
  padding-bottom: 0rpx;
  margin-top: 88rpx;
}
.answer-cell{
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding: 26rpx 19rpx 29rpx 25rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
}
.answer-cell:last-child{
  margin-bottom: 0rpx;
}
.answer-cell-author{
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #333333;
  font-size: 24rpx;
}

.answer-cell-author image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 30rpx;
  flex: 0 0 60rpx;
}
.answer-cell-author text{
  flex: 1;
  width: 1rpx;
  flex-wrap: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.answer-cell-title{
  flex-wrap: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
  font-weight: bold;
  margin-top: 31rpx;
  margin-bottom: 29rpx;
}
.answer-cell-content{
  color: #666;
  font-size: 32rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin-bottom: 38rpx;
}
.answer-cell-read{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #ccc;
  font-size: 24rpx;
}

.eidtAnswer{
  position: fixed;
  right: 83rpx;
  bottom: 103rpx;
  z-index: 500;
  width: 83rpx;
  height: 83rpx;
  border-radius: 41.5rpx;
  background-color: #3C3850;
}
.eidtAnswer image{
  width: 100%;
  height: 100%;
}

@import "../template/netError/netError.wxss";
.netError{
  z-index: 2000;
  top: 0rpx;
  background-color: white;
}