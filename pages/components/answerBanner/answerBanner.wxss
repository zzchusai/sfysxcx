.answer-banner-scroll{
  display: flex;
  width: 100%;
  height: 88rpx;
  flex-direction: row;
  flex-wrap: nowrap;
  white-space: nowrap;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #333333;
  padding-left: 23rpx;
  border-top: 1rpx solid #F1F1F1;
  background-color: #fff;
}


.answer-banner-scroll view{
  display: inline-block;
  margin-right: 37rpx;
}
.answer-banner-scroll view.select{
  color: #C19C75;
}

 .answer-banner-scroll view:last-child{
  margin-right: 23rpx;
} 