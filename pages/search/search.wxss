@import "../template/netError/netError.wxss";
@import '../template/noData/noData.wxss';
.info {
  border-bottom: 1px solid #dcdcdc;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 999;
  background: #fff;
}

.searchArt {
  position: relative;
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 30rpx;
  background-color: white;
  font-size: 30rpx;
  height: 70rpx;
  color: #999;
  border: 1px solid gray;
}
.searchArt  input{
  flex: 1;
}
.searchArt  icon{
  margin-right: 30rpx;
}
.search {
  height: 32rpx;
  width: 32rpx;
  margin-left: 29rpx;
  margin-right: 29rpx;
}

.art-content {
  margin-top: 132rpx;
  width: 100%;
}

.hotArtTitles {
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #999;
  height: 100%;
}

.hotArt-content {
  display: flex;
  flex-direction: column;
}

.hotArt-content .hotArt {
  display: flex;
  flex-direction: row;
}

.home-cell {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 40rpx 0rpx;
  margin: 0rpx 30rpx;
  padding-bottom: 0rpx;
  border-bottom: 1rpx #e8e8e8 solid;
}

.home-cell:last-child {
  border-bottom: none;
}

.home-cell .home-cell-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.home-cell .home-cell-title {
  color: #4c4949;
  font-size: 30rpx;
  flex: 1;
  margin-right: 30rpx;
  flex-wrap: wrap;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 65rpx;
}

.home-cell .isRead {
  color: #999 !important;
}

.home-cell .home-cell-tag {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #999;
  font-size: 26rpx;
  margin-bottom: 40rpx;
}

.home-cell>image {
  width: 235rpx;
  height: 184rpx;
  margin-left: 33rpx;
  margin-bottom: 40rpx;
}
