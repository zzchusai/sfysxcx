/* pages/profile/profile.wxss */
@import "../template/netError/netError.wxss";
@import "../template/noCollect/noCollect.wxss";
.profile-root {
  width: 100%;
  /* height: 100%; */
}
page{
  background-color: #FAF9F9;
}
.myQuestion-cell{
  background: #fff;
}
.profile-header {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 999;
  background: #fff;
}

.info {
  display: flex;
  flex-direction: row;
  padding-bottom: 20rpx;
  border-bottom: 15rpx solid #dcdcdc;
}

.info .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 30rpx;
}

.info .nickName {
  line-height: 100rpx;
  margin-left: 40rpx;
  font-size: 60rpx;
  font-weight: 900;
}

.myColl {
  margin: 40rpx 0 30rpx 30rpx;
  font-weight: 600;
}

.tabs {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 1rpx solid #d0d0d7;
   background: #fff; 
   z-index: 10000; 
}
.content{
  margin-top: 70rpx;
  width: 100%;
}
.tabs-item.selected {
  color: rgba(171, 149, 109, 0.8);
  border-bottom: 10rpx solid rgba(171, 149, 109, 0.8);
}

.tabs-item {
  width: 30%;
  color: black;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 20rpx;
  /* border-bottom: 1rpx solid #d0d0d7; */
}
.hotArtTitles {
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #999;
}

.hotArt-content {
  display: flex;
  flex-direction: column;
}

.hotArt-content .hotArt {
  display: flex;
  flex-direction: row;
}

.home-cell {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 40rpx 30rpx;
  padding-bottom: 0rpx;
  border-bottom: 1rpx #e8e8e8 solid;
  background: #fff;
}

.home-cell:last-child {
  border-bottom: none;
}

.home-cell .home-cell-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.home-cell .home-cell-title {
  color: #4c4949;
  font-size: 30rpx;
  flex: 1;
  margin-right: 30rpx;
  flex-wrap: wrap;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 65rpx;
}

.home-cell .isRead {
  color: #999 !important;
}

.home-cell .home-cell-tag {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #999;
  font-size: 26rpx;
  margin-bottom: 40rpx;
}

.home-cell>image {
  width: 235rpx;
  height: 184rpx;
  margin-left: 33rpx;
  margin-bottom: 40rpx;
}

.answer-cell {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding: 26rpx 19rpx 29rpx 25rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
}

.answer-cell:last-child {
  margin-bottom: 0rpx;
}

.answer-cell-author {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #333;
  font-size: 24rpx;
}

.answer-cell-author image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 30rpx;
  flex: 0 0 60rpx;
}

.answer-cell-author text {
  flex: 1;
  width: 1rpx;
  flex-wrap: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.answer-cell-title {
  flex-wrap: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
  font-weight: bold;
  margin-top: 31rpx;
  margin-bottom: 29rpx;
}

.answer-cell-content {
  color: #666;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin-bottom: 38rpx;
}

.answer-cell-read {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #ccc;
  font-size: 24rpx;
}
.netError{
  z-index: 2500;
  background-color: white;
}
