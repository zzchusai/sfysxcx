@import "../template/noComments/noComments.wxss";
@import "../template/netError/netError.wxss";
@import '../template/noData/noData.wxss';
.web {
  padding: 0rpx 30rpx;
  border-bottom: 10rpx #f6f6f6 solid;
}

.article-title {
  color: #333;
  font-weight: bold;
  margin-top: 24rpx;
  margin-bottom: 49rpx;
  word-break: break-all;
}

.article-author {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #ccc;
  font-size: 26rpx;
  margin-bottom: 33rpx;
}

.article-read {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-top: 41rpx;
  margin-bottom: 40rpx;
  color: #b7b7b7;
  font-size: 22rpx;
  padding: 5rpx 0;
  line-height: 43rpx;
}

.article-read>view:first {
  margin-right: 37rpx;
}

.article-read image {
  margin-right: 10rpx;
}

.article-read image:first-child {
  width: 40rpx;
  height: 40rpx;
}

.article-read image:last-child {
  width: 34rpx;
  height: 40rpx;
}

.likes {
  margin-left: 30rpx;
}

.allComments {
  display: flex;
  flex-direction: column;
  border-top: 20rpx solid #dcdcdc;
  width: 100%;
  padding-bottom: 100rpx;
}

.allCommentsTitle {
  margin: 20rpx 0 20rpx 20rpx;
  font-weight: 500;
  font-size: 40rpx;
  color: black;
}

.commemt-Cell {
  background-color: #fff;
  display: flex;
  width: 100%;
  flex-direction: row;
  padding: 30rpx 30rpx 0 30rpx;
  border-radius: 12rpx;
}


.writeComments {
  display: flex;
  flex-direction: row;
  position: fixed;
   bottom: 0; 
  width: 100%;
 /* padding:10rpx 0; */
  border-top: 2rpx solid #d7d7d7;
  background: #fff;
}
.writeComment-entrys{
  width: 100%;
  display: flex;
  flex-direction:row;
  padding: 10rpx 0; 
}
.writeComment-entry {
  width: 55%;
  margin-left: 20rpx;
  border-radius: 20rpx;
  height: 80rpx;
  background: #d7d7d7;
}

.input-write {
  height: 80rpx;
  margin-left: 20rpx;
}
.comments-setting{
  position: relative;
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: space-around;
}
.comments-setting image{
 display: flex;
 align-self: center;
 width: 60rpx;
 height: 60rpx;
}
.setting-commentsNums{
  position: absolute;
  left: 70rpx;
  font-size: 26rpx;
  top: 20rpx;
  width: 35rpx;
  color: #fff;
  text-align: center;
  line-height:30rpx; 
  border-radius: 10rpx;
  height: 30rpx;
   background:rgba(171, 149, 109, 1);  
}
.rankPic{
  width: 100rpx;
  height: 30rpx;
  margin-left:20rpx; 
  margin-top:10rpx; 
}
.writeComment-view{
  width: 100%;
  height: 100%;
  background: #d7d7d7;
  padding: 0 20rpx;
   /* line-height: 100rpx; */
}
 .operation{
line-height: 100rpx;
display: flex;
flex-direction: row;
justify-content: space-between;
font-size: 50rpx;
}
.operation .cancel,.operation .confirm{
    font-size:40rpx;
     line-height: 100rpx; 
     color: #999;
}
.writeTextarea{
   display: flex;
  flex-direction: row;
  justify-content: center; 
  background: #fff;
   margin-bottom: 40rpx; 
  border-radius:10rpx; 
}
.textarea-write{
  width: 100%;
  outline: 0;
  padding: 0;
  margin: 0;
  resize:none;
}

.commemtcell{
  width: 100%;
}
.comments{
  position: relative;
  width: 100%;
  height: 600rpx;
}
.netError{
  background-color: white;
  z-index: 1000;
}