@import "../template/noComments/noComments.wxss";
page,scroll-view{
  background-color: white;
}
.answerDetail-theme{
  display: flex;
  flex-direction: column;
  padding: 25rpx 30rpx;
}
.answerDetail-theme-user{
  display: flex;
  flex-direction: row;
  color: #333;
  font-size: 24rpx;
  justify-content: flex-start;
  align-items: center;
}
.answerDetail-theme-user image:first-child{
  width: 60rpx;
  height: 60rpx;
  flex: 0 0 60rpx;
  border-radius: 30rpx;
  margin-right: 30rpx;
}
.answerDetail-theme-user text{
  flex: 1;
  width: 1rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.answerDetail-theme-user image:last-child{
  width:83rpx;
  height:21rpx;
  margin-left: 20rpx;
  flex: 0 0 83rpx;
}
.answerDetail-theme-title{
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 31rpx;
  margin-bottom: 30rpx;
}
.answerDetail-theme-content{
  color: #666666;
  font-size: 32rpx;
  margin-bottom: 28rpx;
}
.answerDetail-theme-pic image{
  display: inline-block;
  width: 202rpx;
  height: 209rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.answerDetail-theme-pic{
   margin-bottom: 23rpx;
}
.themeDetail-del{
  color: #333333;
  margin-left: 29rpx;
}
.answerDetail-theme-attach{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 24rpx;
  color: #ccc;
  margin-bottom: 5rpx;
}
.answerDetail-select{
  padding-top: 30rpx;
  margin: 0rpx 40rpx;
  border-top: #F6F6F6 1rpx solid;
}
.answerDetail-list-header{
  color: #323232;
  font-size: 32rpx;
  margin-bottom: 9rpx;
}
.answerDetail-all{
  padding: 0rpx 30rpx;
  padding-top: 30rpx;
  border-top: #F6F6F6 10rpx solid;
  margin-bottom: 84rpx;
}
@import "../template/netError/netError.wxss";
.netError{
  background-color: white;
  z-index: 1000;
}
 .comments{
 position: relative;
 left: 0px;
 top: 0px;
 width: 100%;
 height: 600rpx;
 z-index: 1;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
 color: #666666;
 font-size: 30rpx;
} 
 .comments image{
  width: 99rpx;
  height: 99rpx;
  margin-bottom: 35rpx;
  margin-top: -200rpx;
 }
.contentError{
 position: relative;
 width: 100%;
 height: 100%;
 left: 0px;
 top: 0px;
 z-index: 1100;
 display: flex;
 flex-direction: column;
 justify-content: center;
 align-items: center;
 color: #666666;
 font-size: 30rpx;
 background-color: white;
}
.contentError image{
  width: 158rpx;
  height: 142rpx;
  margin-bottom: 45rpx;
  margin-top: -200rpx;

}